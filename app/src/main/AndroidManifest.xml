<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dentalhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
            android:name=".DentalApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:usesCleartextTraffic="true"
            android:theme="@style/AppTheme">
        <meta-data
                android:name="firebase_performance_logcat_enabled"
                android:value="true" />

        <activity android:label="@string/app_name"
                  android:screenOrientation="landscape"
                android:name=".MainActivity" />
        <activity
                android:name=".LoginActivity"
                android:screenOrientation="landscape"
                android:label="@string/title_activity_login" />
        <activity
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:name=".AddEncounterActivity" />
        <activity
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:name=".ViewPatientActivity" />
        <activity
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:name=".SearchPatientActivity" />
        <activity
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:name=".AddPatientActivity" />
        <activity
                android:label="@string/app_name"
                android:screenOrientation="landscape"
                android:name=".SplashActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service android:name=".services.LocationTrackerService" android:exported="false"
                 android:stopWithTask="true"
        />
    </application>

</manifest>