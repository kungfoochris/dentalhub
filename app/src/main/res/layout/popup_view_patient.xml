                android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvCountry"
                android:layout_weight="0.65"
                android:textSize="18sp"
                android:text="@string/country_"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvCountryView"
                android:layout_weight="0.35"
                android:textSize="18sp"
                android:text="@string/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvMaritalStatus"
                android:layout_weight="0.65"
                android:textSize="18sp"
                android:text="@string/martial_status_"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvMaritalStatusView"
                android:layout_weight="0.35"
                android:textSize="18sp"
                android:text="@string/martial_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvEducationLevel"
                android:layout_weight="0.65"
                android:textSize="18sp"
                android:text="@string/education_level_"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvEducationLevelView"
                android:layout_weight="0.35"
                android:textSize="18sp"
                android:text="@string/educationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>