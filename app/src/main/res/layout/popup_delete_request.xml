<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

    <ImageButton
            android:id="@+id/btnModifyEncounterCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@android:drawable/ic_delete" />

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Delete"
                android:textSize="24sp" />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accidental Entry" />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Duplicate Encounter" />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Incorrect Patient" />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Incorrect User" />
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Other" />

        <EditText
                android:id="@+id/etDeleteMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/other"
                android:lines="3"
                android:padding="10dp"
                android:textSize="24sp" />

    </RadioGroup>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Request Delete" />

</LinearLayout>