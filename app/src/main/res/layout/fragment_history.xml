<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.HistoryFragment"
             android:padding="8dp"
>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/blood_disorder_or_bleeding_problem"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/diabetes"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/liver_problem"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/rheumatic_fever"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:text="@string/seizures_or_epilepsy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/hepatitis_b_or_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/hiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvOther"
                    android:text="@string/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/etOther"
                    android:labelFor="@+id/tvOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/no_underlying_medical_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvMedications"
                    android:text="@string/medications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/etMedications"
                    android:labelFor="@+id/tvMedications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/not_taking_any_medications"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvAllergies"
                    android:text="@string/allergies"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <EditText
                    android:labelFor="@+id/tvAllergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>