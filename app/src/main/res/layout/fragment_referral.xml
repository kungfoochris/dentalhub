<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
    >
        <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
            <RadioButton android:id="@+id/radioNoReferral"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/no_referral"/>
            <RadioButton android:id="@+id/radioHealthPost"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/health_post"/>
        </RadioGroup>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxNoReferral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:labelFor="@+id/checkBoxNoReferral"
                    android:text="@string/no_referral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxHealthPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:labelFor="@+id/checkBoxHealthPost"
                    android:text="@string/health_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxHygienist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/hygienist"
                    android:labelFor="@+id/checkBoxHygienist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxDentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/dentist"
                    android:labelFor="@+id/checkBoxDentist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxGeneralPhysician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/general_physician"
                    android:labelFor="@+id/checkBoxGeneralPhysician"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkBoxOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="@string/other"
                    android:labelFor="@+id/checkBoxOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <EditText
                android:visibility="gone"
                android:id="@+id/etOtherDetails"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="@string/other"
        />

        <EditText
                android:id="@+id/etRecallDate"
                android:hint="@string/recall_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
        <EditText
                android:id="@+id/etRecallTime"
                android:hint="@string/recall_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="@string/select_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <Spinner
                android:id="@+id/spinnerLocation"
                android:prompt="@string/select_location"
                android:layout_width="220dp"
                android:layout_height="48dp"/>

        <TextView
                android:text="@string/select_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/spinnerActivity"
                android:prompt="@string/select_activity"
                android:layout_width="220dp"
                android:layout_height="48dp"/>

        <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:id="@+id/btnBack"
                    android:layout_weight="0.5"
                    android:text="@string/back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
            <Button
                    android:id="@+id/btnNext"
                    android:layout_weight="0.5"
                    android:text="@string/save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />

        </LinearLayout>
    </LinearLayout>

</ScrollView>