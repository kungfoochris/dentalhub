<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape android:shape="rectangle" >
            <stroke android:width="2dp" android:color="@color/colorART" />
            <corners android:radius="8dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
    <item android:start="0dp" android:end="40dp">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/colorSDF" />
            <corners android:topLeftRadius="8dp" android:bottomLeftRadius="8dp"/>
            <solid android:color="@color/white" />
            <size android:width="40dp" />
        </shape>
    </item>
    <item
        android:start="2dp"
        android:top="2dp"
        android:bottom="2dp"
        android:end="2dp">

        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>